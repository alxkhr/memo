{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "ES2015",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.m\\.css$",
          "classnameTransform": "camelCaseOnly"
        }
      }
    ]
  }
}
